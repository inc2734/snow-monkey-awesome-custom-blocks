{
  "name": "snow-monkey-blocks/taxonomy-posts",
	"title": "Taxonomy posts",
	"description": "You can display recent posts linked to any taxonomy.",
  "category": "smb",
  "attributes": {
    "taxonomy": {
      "type": "string",
      "default": null
    },
    "termId": {
      "type": "number",
      "default": 0
    },
    "postsPerPage": {
      "type": "number",
      "default": 6
    },
    "layout": {
      "type": "string",
      "default": "rich-media"
    },
    "ignoreStickyPosts": {
      "type": "boolean",
      "default": true
    },
    "smCols": {
      "type": "number",
      "default": 0
    },
    "noPostsText": {
      "type": "string",
      "default": ""
    },
    "itemTitleTagName": {
      "type": "string",
      "default": "h3"
    },
    "itemThumbnailSizeSlug": {
      "type": "string",
      "default": "large"
    },
    "anchor": {
      "type": "string",
      "default": ""
    }
  },
  "supports": {
    "anchor": true
  },
  "example": {
  	"attributes": {
      "postsPerPage": 3,
      "taxonomy": "category",
      "termId": 0
    }
  }
}
